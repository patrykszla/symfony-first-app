<div class="article"> 
    <div class="div"><a href="{{ article.link }}"><h2>Article title: {{ article.title }}</h2></a></div>
    <div> 
        <img src="{{ article.images|first.path }}" alt="image alt" class="article_image" style="width:500px; height:500px;"><br />
        <span><b>Date added: </b><span>{{article.dateAdded|date("m/d/y")}}</span> </span><br />
        <span><b>Article content: </b><span>{{article.content}}</span> </span>
    </div> 
</div>